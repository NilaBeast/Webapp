<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- <link rel="stylesheet" href="/styles/style.css"> -->
     <style>
        #task-button:hover{
            background-color: aqua;
            pointer-events: all;
            
        }
        #read-button:hover{
            color: cornsilk;
        }
        

     </style>
</head>
<body>
    <div id="main-area" class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white " >
            <form action="/create" method="post">
                <input class="block px-5 py-2 w-full rounded-md outline-none bg-zinc-800" type="text" placeholder="Title goes here" name="title">
                <textarea class="block px-5 py-2 w-full rounded-md outline-none mt-2 bg-zinc-800 resize-none" placeholder="Write your task details here" name="details"></textarea>
                <input id="task-button" class="mt-2 bg-blue-600 px-5 py-2 " type="submit" value="Create Task">
            </form>

        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap">
            <% if(files.length > 0){ %>
            <% files.forEach(function(val){ %>
                <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md ">
                    <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                    <a id="read-button" class="text-blue-500 inline-block mt-3" href="/file/<%= val %>">Read More</a>
                    
                </div>
               
            <% }) %>
            <% } else { %>
                <h3 class="text-zinc-300">no tasks yet.</h3>


            <% } %>
            
        </div>

    </div>
</body>
</html>